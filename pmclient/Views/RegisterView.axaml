<UserControl xmlns="https://github.com/avaloniaui"
			xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
			xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
			xmlns:vm="clr-namespace:pmclient.ViewModels"
			mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="600"
			x:Class="pmclient.Views.RegisterView"
			x:DataType="vm:RegisterViewModel">
	<Design.DataContext>
		<vm:RegisterViewModel />
	</Design.DataContext>

	<Border Background="{DynamicResource BaseLow}" Padding="30" HorizontalAlignment="Center"
			VerticalAlignment="Center" CornerRadius="25" >
		<StackPanel Spacing="15">
			<TextBlock Text="Registration" FontSize="25" HorizontalAlignment="Center" Foreground="{DynamicResource BaseHigh}" />
			<TextBox Classes="ReversTextBox" Text="{Binding Email}" Watermark="Email" />
			<TextBox Classes="ReversTextBox" Text="{Binding Username}" Watermark="Username" />
			<TextBox Classes="ReversTextBox PasswordBox" Text="{Binding Password}" Watermark="Password" />
			<TextBox Classes="ReversTextBox PasswordBox" Text="{Binding ConfirmPassword}" Watermark="Confirm Password" />

			<Button HorizontalAlignment="Stretch" HorizontalContentAlignment="Center" Content="Back" CornerRadius="10"
					Command="{Binding BackCommand}">
				<Button.Styles>
					<Style Selector="Button">
						<Setter Property="Background" Value="{DynamicResource BaseMedium}" />
						<Setter Property="Foreground" Value="{DynamicResource BaseLow}" />

						<Style Selector="^:pointerover /template/ ContentPresenter#PART_ContentPresenter">
							<Setter Property="Foreground" Value="{DynamicResource BaseLow}" />
							<Setter Property="Background" Value="{DynamicResource BaseHigh}" />
						</Style>
					</Style>
				</Button.Styles>
			</Button>
			
			<Button HorizontalAlignment="Stretch" HorizontalContentAlignment="Center" Content="Register" CornerRadius="10"
					Command="{Binding RegisterCommand}">
				<Button.Styles>
					<Style Selector="Button">
						<Setter Property="Background" Value="{DynamicResource BaseMedium}" />
						<Setter Property="Foreground" Value="{DynamicResource BaseLow}" />

						<Style Selector="^:pointerover /template/ ContentPresenter#PART_ContentPresenter">
							<Setter Property="Foreground" Value="{DynamicResource BaseLow}" />
							<Setter Property="Background" Value="{DynamicResource BaseHigh}" />
						</Style>
					</Style>
				</Button.Styles>
			</Button>
			
			<TextBlock Text="{Binding ErrorMessage}" TextWrapping="Wrap"
						Foreground="{DynamicResource BaseHigh}" />
		</StackPanel>
	</Border>
</UserControl>